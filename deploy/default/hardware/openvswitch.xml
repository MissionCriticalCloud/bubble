<domain type='kvm'>
    <name>{{name}}</name>
    <memory unit='MiB'>{{memory}}</memory>
    <vcpu>{{cpu}}</vcpu>
    <os>
        <type arch='x86_64' machine='pc'>hvm</type>
        <boot dev='hd' />
    </os>
    <features>
        <acpi />
        <apic />
        <pae />
    </features>
    <cpu mode='custom' match='exact'>
        <model fallback='allow'>kvm64</model>
        <feature policy='require' name='vmx' />
    </cpu>
    <clock offset='utc' />
    <on_poweroff>destroy</on_poweroff>
    <on_reboot>restart</on_reboot>
    <on_crash>restart</on_crash>
    <devices>
        <emulator>/usr/libexec/qemu-kvm</emulator>
        <disk type='file' device='disk'>
            <driver name='qemu' type='{{format}}' />
            <source file='/data/images/{{name}}.img' />
            <target dev='{{disk_dev}}' bus='{{disk_bus}}' />
        </disk>
        <disk type='file' device='disk'>
            <driver name='qemu' type='{{data_disk_format}}' />
            <source file='/data/images/{{data_disk_1_name}}.img' />
            <target dev='{{data_disk_1_dev}}' bus='{{data_disk_bus}}' />
        </disk>
        <disk type='file' device='disk'>
            <driver name='qemu' type='{{data_disk_format}}' />
            <source file='/data/images/{{data_disk_2_name}}.img' />
            <target dev='{{data_disk_2_dev}}' bus='{{data_disk_bus}}' />
        </disk>
        <disk type='block' device='cdrom'>
            <driver name='qemu' type='raw' />
            <target dev='hdc' bus='ide' />
            <readonly />
            <address type='drive' controller='0' bus='1' unit='0' />
        </disk>
        <controller type='ide' index='0'>
        </controller>
        <interface type='bridge'>
            <mac address='{{mac}}' />
            <source bridge='virbr0' />
            <target dev='{{name}}-eth0' />
            <model type='{{net_model}}' />
            <alias name='net0' />
        </interface>
        <interface type='bridge'>
            <source bridge='virbr0' />
            <target dev='{{name}}-eth1' />
            <model type='{{net_model}}' />
            <alias name='net1' />
        </interface>
        <serial type='pty'>
            <target port='0' />
        </serial>
        <console type='pty'>
            <target type='serial' port='0' />
        </console>
        <input type='mouse' bus='ps2' />
        <graphics type='vnc' port='-1' autoport='yes' />
        <sound model='ich6'>
        </sound>
        <video>
            <model type='cirrus' vram='9216' heads='1' />
        </video>
        <memballoon model='virtio'>
        </memballoon>
    </devices>
</domain>
